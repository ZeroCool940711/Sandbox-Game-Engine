				        backgroundAlpha="0" 
				        backgroundColor="#ffffff"
				        borderColor="#ff8000"
				        borderStyle="none"
				        themeColor="#ff8000" borderThickness="2">
				        <mx:Spacer width="100%" height="19"/>
				        <mx:HBox width="100%">
				            <mx:Spacer width="20" height="20"/>
				            <mx:Label text="Entity size"/>
				        </mx:HBox>
