	<mx:Label text="Global Configuration For Entity" width="243" height="34" fontSize="17" fontFamily="Times New Roman" color="#ffffff" fontStyle="italic"/>
	<mx:HTTPService id="catalogueForIcons" url="static/assets/catalogueforicons.xml" result="onCatalogueResult()" />
	
	<mx:HTTPService id="setGlobalPrefs"/>
	<mx:HTTPService id="setGPrefs"/>
	<mx:HTTPService id="getGPrefs" result="onGlobalPrefResult()"/>
	<mx:HTTPService id="getnames" result="onNamesResult()"/>
	<mx:Script source="GlobalPreferenceScript.as"/>		
